{
  "name": "playwright-codegen-template",
  "version": "1.0.0",
  "private": true,
  "description": "Clean Playwright starter focused on codegen-based UI test authoring.",
  "type": "commonjs",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:template": "playwright test tests/templates/codegen.template.spec.ts",
    "codegen": "playwright codegen",
    "codegen:base": "playwright codegen $BASE_URL",
    "report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3",
    "typescript": "^5.9.2"
  }
}
