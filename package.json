{
  "name": "playwright-autotests",
  "version": "1.0.0",
  "private": true,
  "description": "Template project for Playwright UI test automation with code generation.",
  "type": "commonjs",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "report": "playwright show-report",
    "codegen": "playwright codegen",
    "codegen:base": "playwright codegen http://localhost:3000",
    "trace:open": "playwright show-trace test-results/**/trace.zip"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3"
  }
}
